<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/colorMainBackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/adContainer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/adView">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:background="@color/colorHeader"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_alignParentTop="true">

            <ImageButton
                android:id="@+id/btn_back"
                android:background="@drawable/ic_back"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <TextView
                android:textSize="22.0sp"
                android:textColor="@color/colorWhite"
                android:id="@+id/headertext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:layout_toLeftOf="@+id/btn_home"
                android:layout_toRightOf="@+id/btn_back"
                android:layout_centerVertical="true" />

            <ImageButton
                android:id="@+id/btn_home"
                android:background="@drawable/ic_home"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="10.0"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="5.0">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="1.0dip"
                    android:layout_toLeftOf="@+id/side_layout">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="5.0dip" />
                </RelativeLayout>

                <View
                    android:background="@color/colorWhite"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_toLeftOf="@+id/side_layout" />

                <RelativeLayout
                    android:id="@+id/side_layout"
                    android:background="@color/colorHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">

                        <RelativeLayout
                            android:gravity="center"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="0.0dip"
                            android:layout_weight="1.0">

                            <ImageButton
                                android:id="@+id/btn_share"
                                android:background="@drawable/ic_share1"
                                android:layout_width="25.0dip"
                                android:layout_height="25.0dip"
                                android:layout_centerInParent="true" />

                            <TextView
                                android:textSize="12.0sp"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/txt_share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/share"
                                android:layout_below="@+id/btn_share"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <View
                            android:background="@color/colorWhite"
                            android:layout_width="55.0dip"
                            android:layout_height="1.0dip"
                            android:layout_alignParentBottom="true" />

                        <RelativeLayout
                            android:gravity="center"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="0.0dip"
                            android:layout_weight="1.0">

                            <ImageButton
                                android:id="@+id/btn_rate"
                                android:background="@drawable/ic_rate"
                                android:layout_width="25.0dip"
                                android:layout_height="25.0dip"
                                android:layout_centerInParent="true" />

                            <TextView
                                android:textSize="12.0sp"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/txt_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rate"
                                android:layout_below="@+id/btn_rate"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <View
                            android:background="@color/colorWhite"
                            android:layout_width="55.0dip"
                            android:layout_height="1.0dip"
                            android:layout_alignParentBottom="true" />

                        <RelativeLayout
                            android:gravity="center"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="0.0dip"
                            android:layout_weight="1.0">

                            <ImageButton
                                android:id="@+id/btn_more"
                                android:background="@drawable/ic_more"
                                android:layout_width="25.0dip"
                                android:layout_height="25.0dip"
                                android:layout_centerInParent="true" />

                            <TextView
                                android:textSize="12.0sp"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/txt_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/more"
                                android:layout_below="@+id/btn_more"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <View
                            android:background="@color/colorWhite"
                            android:layout_width="55.0dip"
                            android:layout_height="1.0dip"
                            android:layout_alignParentBottom="true" />

                        <RelativeLayout
                            android:gravity="center"
                            android:id="@+id/remove_watermark_lay"
                            android:layout_width="fill_parent"
                            android:layout_height="0.0dip"
                            android:layout_weight="1.0">

                            <ImageButton
                                android:id="@+id/btn_remove_watermark"
                                android:background="@drawable/removewatermark"
                                android:layout_width="25.0dip"
                                android:layout_height="25.0dip"
                                android:layout_centerInParent="true" />

                            <TextView
                                android:textSize="8.0sp"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/txt_remove_watermark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/remove_watermark"
                                android:layout_below="@+id/btn_remove_watermark"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <View
                            android:background="@color/colorWhite"
                            android:layout_width="55.0dip"
                            android:layout_height="1.0dip"
                            android:layout_alignParentBottom="true" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <View
            android:background="@color/colorWhite"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_below="@+id/toolbar" />
    </RelativeLayout>
</RelativeLayout>